{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "target": "ESNext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "./dist"
  ]
}